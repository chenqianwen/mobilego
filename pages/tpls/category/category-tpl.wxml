<template name="categorydetail">
  <view class="category-detail-box" hidden="{{!categoryDetailData}}">
    <view class="category-header">
      <image src="{{categoryDetailData.topImgUrl}}" mode="aspectFill"></image>
    </view>
    <view class="category-title">
      <text>{{categoryDetailData.title}}</text>
    </view>
    <view class="category-main">
      <block wx:for="{{categoryDetailData.procucts}}" wx:key="{{item.id}}">
        <view class="category-goods-items {{index%3==1?'middle':''}}" data-id="{{item.id}}" data-name="{{item.name}}" bindtap="onProductTap">
          <image src="{{item.productImgUrl}}" mode="aspectFill"></image>
          <view>{{item.name}}</view>
        </view>
      </block>
    </view>
  </view>
</template>