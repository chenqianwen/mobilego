/**index.wxss**/
@import "../tpls/products/products-tpl.wxss";
.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.item-swiper {
  width: 100%;
  min-width: 100rpx;
  min-height: 100rpx;
  text-align: center;
}

.item-tab {
  width: 100%;
  text-align: center;
}

.item-tab .tab .label {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-tab .tab .text {
  margin-left: 8rpx;
}

.item-tab .tab .active {
  color: #ab956d;
}


