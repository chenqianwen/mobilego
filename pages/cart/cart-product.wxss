.cart-container {
  background-color: #fff;
}

.top-box {
  display: flex;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #d0d0d7;
  flex-direction: row-reverse;
  justify-content: space-between;
}

.top-box .handle-box {
  font-size: 32rpx;
  font-family: 黑体;
  width: 160rpx;
  color: red;
  display: flex;
  padding-right: 36rpx;
  align-items: center;
}

.cart-box {
  width: 100%;
  overflow-x: hidden;
  margin-bottom: 92rpx;
  font-size: 28rpx;
}

.cart-item {
  display: flex;
  padding-top: 10rpx;
  padding-bottom: 10rpx; 
  background-color: #fff;
  border-bottom: 1rpx solid #d0d0d7;
  height: 186rpx;
}

.cart-delete-item {
  margin-left: -120rpx;
}

.cart-item:last-child {
  margin-bottom: 0;
}

.cart-item>view {
  height: 100%;
}

.cart-item-main {
  width: 100%;
  display: flex;
}

.cart-item-checkbox {
  width: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item-checkbox image {
  height: 44rpx;
  width: 44rpx;
}

.cart-item-img {
  width: 186rpx;
  height: 100%;
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.cart-item-img image {
  width: 100%;
  height: 100%;
}

.good-image {
  width: 100%;
  height: 100%;
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.cart-item-word {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
  margin: 0 20rpx;
  box-sizing: border-box;
  color: #454553;
}

.title-box {
  font-family: "黑体";
  font-weight: 800;
  display: flex;
  margin-left: 10rpx;
  margin-top: 10rpx;
  justify-content: space-between;
}

.bottom-box {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  justify-content: space-between;
}

.bottom-box .price {
  font-size: 36rpx;
  color: #e64340;
}

.cart-item-counts {
  width: 200rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.cart-item-counts>view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-item-counts .btns {
  color: #454553;
  font-size: 36rpx;
  width: 30%;
  padding: 0 20rpx;
  background: #f2f2f2;
}

.cart-item-counts .btns.disabled {
  color: #d5d5db;
}

.cart-item-counts .counts {
  color: #454553;
  width: 40%;
  font-size: 24rpx;
  box-sizing: border-box;
  border-left: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
}

.cart-item-delete-btn {
  display: flex;
  background: red;
  color: #fff;
  width: 120rpx;
  justify-content: center;
  align-items: center;
}


/*合计*/

.footer-account-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.footer-account-box .to-pay-btn {
  width: 240rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #e64340;
  font-size: 32rpx;
  color: #fff;
}

.footer-account-box .to-pay-btn.no-select {
  background-color: #ccc;
}

.footer-account-box  .left-price {
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: space-between;
  font-size: 28rpx;
  box-sizing: border-box;
}

.footer-account-box .left-price .all-selected {
  /* width: 20rpx; */
  display: flex;
  padding-left: 10rpx;
  align-items: center;
}

.footer-account-box .left-price .all-selected icon {
  margin: 0 20rpx;
}

.footer-account-box .total {
  display: flex;
  align-items: center;
  color: #e64340;
  margin-right: 20rpx;
}
