@import "../tpls/category/category-tpl.wxss";

 .category-container {
   /* min-height: 100vh; 
    */
} 

.search {
  display: flex;
  position: fixed;
  height: 120rpx;
  width: 100%;
  background: grey;
}

.category-box {
  display: flex;
  height: 100vh;
  width: 100%;
  /* padding-top: 120rpx; */
  overflow: hidden;   
}

.left-box {
  flex: 0 0 180rpx;
  border-right: 1rpx solid #d8d8d8;
  background: #f5f5f5;
}

.menu-item {
  height: 50rpx;
  padding: 20rpx 0; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  /* border-left: 6rpx solid #fff;  */
}

.menu-item.selected {
  color: #ab956d;
  border-left-color: #ab956d;
}

.right-box {
  flex: 1;
  transition: all 500ms ease-in-out;
}

.tanslate0 {
  transform: translate(0, 0);
}

.tanslate1 {
  transform: translate(0, -100vh);
}

.tanslate2 {
  transform: translate(0, -200vh);
}

.tanslate3 {
  transform: translate(0, -300vh);
}

.tanslate4 {
  transform: translate(0, -400vh);
}

.tanslate5 {
  transform: translate(0, -500vh);
}

.foods-type-box {
  height: 100vh;
}
